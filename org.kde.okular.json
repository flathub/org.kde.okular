{
    "id": "org.kde.okular",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "okular",
    "rename-icon": "okular",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=cups",
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
