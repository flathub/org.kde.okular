            "name": "ghostscript",
            "config-opts": [
                "--disable-cups"
            ],
            "make-args": [
                "so"
            ],
            "make-install-args": [
                "soinstall"
            ],
            "cleanup": [
                "/share/ghostscript/*/doc/",
                "/share/ghostscript/*/examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs9561/ghostscript-9.56.1.tar.gz",
