        {
            "name": "okular",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "post-install": [
                "mv /app/bin/okular /app/bin/okular-bin",
                "install -Dm755 ../okular-wrapper /app/bin/okular"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.2/src/okular-24.12.2.tar.xz",
                    "sha256": "036cc27dea900a3eae27de9e2fb540d9568a1995d843669baa2a36c2e41556de",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/okular-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "okular-mimetypes.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "okular-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/okular-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
